       SCRIPT: CANDLE ENGINE
       ===================== -->  <script>
    // Canvas setup
    const canvas = document.getElementById('chart');
    const ctx = canvas.getContext('2d');

    function resize(){
      canvas.width = canvas.clientWidth;
      canvas.height = canvas.clientHeight;
    }
    window.addEventListener('resize', resize);
    resize();

    // Controls
    const tfSelect = document.getElementById('tf');
    const timerEl  = document.getElementById('timer');

    // Candle data
    let candles = [];
    const maxCandles = 40; // screen par visible candles

    // Price simulation base
    let price = 100;

    // Time handling
    let tf = parseInt(tfSelect.value,10);
    let remaining = tf;

    tfSelect.addEventListener('change', ()=>{
      tf = parseInt(tfSelect.value,10);
      remaining = tf;
    });

    // Create initial candles
    function seed(){
      candles = [];
      let p = price;
      for(let i=0;i<maxCandles;i++){
        let o = p;
        let c = o + (Math.random()-0.5)*4;
        let h = Math.max(o,c) + Math.random()*2;
        let l = Math.min(o,c) - Math.random()*2;
        candles.push({o,c,h,l});
        p = c;
      }
      price = p;
    }
    seed();

    // Draw candles
    function draw(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      const w = canvas.width / maxCandles;

      // Find min/max
      let min = Infinity, max = -Infinity;
      candles.forEach(c=>{ min=Math.min(min,c.l); max=Math.max(max,c.h); });
      const pad = (max-min)*0.2;
      min -= pad; max += pad;

      function y(v){ return canvas.height - ((v-min)/(max-min))*canvas.height; }

      candles.forEach((c,i)=>{
        const x = i*w + w*0.25;
        const cw = w*0.5;
        const up = c.c >= c.o;
        ctx.strokeStyle = up ? '#ffffff' : '#ff3b3b';
        ctx.fillStyle   = up ? '#ffffff' : '#ff3b3b';

        // wick
        ctx.beginPath();
        ctx.moveTo(x+cw/2, y(c.h));
        ctx.lineTo(x+cw/2, y(c.l));
        ctx.stroke();

        // body
        const top = y(Math.max(c.o,c.c));
        const bot = y(Math.min(c.o,c.c));
        ctx.fillRect(x, top, cw, Math.max(2, bot-top));
      });
    }

    // Update candle every frame (smooth movement)
    function tick(){
      const last = candles[candles.length-1];
      last.c += (Math.random()-0.5)*0.4;
      last.h = Math.max(last.h, last.c);
      last.l = Math.min(last.l, last.c);
      draw();
    }

    // New candle on expiry
    function newCandle(){
      const prev = candles[candles.length-1];
      const o = prev.c;
      const c = o + (Math.random()-0.5)*6;
      const h = Math.max(o,c) + Math.random()*2;
      const l = Math.min(o,c) - Math.random()*2;
      candles.push({o,c,h,l});
      if(candles.length > maxCandles) candles.shift();
    }

    // Timer loop
    setInterval(()=>{
      remaining--;
      if(remaining <= 0){
        remaining = tf;
        newCandle();
      }
      const mm = String(Math.floor(remaining/60)).padStart(2,'0');
      const ss = String(remaining%60).padStart(2,'0');
      timerEl.textContent = mm+':'+ss;
    },1000);

    // Smooth animation
    setInterval(tick, 100);
  </script></body>
</html>
