<script>
/*
========================================================
CANDLE ENGINE (DEMO MARKET LOGIC)
--------------------------------------------------------
Yeh part market ko upar / neeche move karta hai
Proper wick + body ke sath candles banti hain
========================================================
*/

const chart = document.getElementById("chart");
const tfSelect = document.getElementById("timeframe");
const signalText = document.getElementById("signalText");

let price = 289.2;          // Starting price (USD/PKR style)
let xPos = 20;              // Candle X position
let candles = [];           // Candle memory
let interval = 60000;       // Default 1 minute

// Random helper
function rand(min, max){
  return Math.random() * (max - min) + min;
}

// Generate one realistic candle
function generateCandle(){
  let open = price;
  let move = rand(-0.35, 0.35); // market upar / neeche
  let close = open + move;

  let high = Math.max(open, close) + rand(0.05, 0.25);
  let low  = Math.min(open, close) - rand(0.05, 0.25);

  price = close;

  return { open, close, high, low };
}

// Draw candle on screen
function drawCandle(data, isFuture){
  let scale = 420;
  let base = 80;

  let candle = document.createElement("div");
  candle.className = "candle" + (isFuture ? " future" : "");
  candle.style.left = xPos + "px";

  let wick = document.createElement("div");
  wick.className = "wick";
  wick.style.height = (data.high - data.low) * scale + "px";
  wick.style.bottom = (data.low - 288) * scale + base + "px";

  let body = document.createElement("div");
  body.className = "body " + (data.close >= data.open ? "green" : "red");
  body.style.height = Math.abs(data.close - data.open) * scale + "px";
  body.style.bottom = (Math.min(data.open, data.close) - 288) * scale + base + "px";

  candle.appendChild(wick);
  candle.appendChild(body);
  chart.appendChild(candle);

  candles.push(candle);
  xPos += 20;

  if(candles.length > 30){
    chart.removeChild(candles.shift());
  }
}

// Main market tick
function tick(){
  let main = generateCandle();
  let future1 = generateCandle();
  let future2 = generateCandle();

  signalText.innerHTML =
    "Signal: " + (main.close >= main.open ? "UP ðŸŸ¢" : "DOWN ðŸ”´");

  drawCandle(main, false);
  drawCandle(future1, true);
  drawCandle(future2, true);
}

// Start / Restart market
function startMarket(){
  clearInterval(window.marketLoop);
  interval = parseInt(tfSelect.value);
  window.marketLoop = setInterval(tick, interval);
}

// Change timeframe
tfSelect.addEventListener("change", startMarket);

// Start market on load
startMarket();

</script>
